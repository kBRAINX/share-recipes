{% extends 'admin/admin.html.twig' %}

{% block title %}create Category{% endblock %}

{% block body %}
    <style>
        .create-form-wrapper {
            margin: 2em auto;
            max-width: 600px;
            width: 95%;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            font-family: Arial, sans-serif;
        }
        .create-form-wrapper h2 {
            text-align: center;
            color: #ff6f61;
            margin-bottom: 1em;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        form div {
            margin-bottom: 15px;
        }
        form label {
            font-weight: bold;
            margin-bottom: 5px;
        }
        form input, form textarea {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            width: 100%;
            height: 50px;
        }
        form textarea {
            height: 150px;
        }
        .btn-group {
            display: flex;
            justify-content: space-between;
        }
        .btn-save {
            background-color: #ff6f61;
            color: #fff;
            border: none;
            padding: 15px 50px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            flex: 1;
            margin-right: 10px;
        }
        .btn-save:hover {
            background-color: #ff5733;
        }
        .btn-cancel {
            background-color: #ccc;
            color: #333;
            border: none;
            padding: 15px 50px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            flex: 1;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }
        .btn-cancel:hover {
            background-color: #999;
        }
        .error-message {
            color: red;
            font-size: 0.9em;
            margin-top: 5px;
        }
    </style>

    <div class="create-form-wrapper">
        <h2>Create Category</h2>
        {{ form_start(form) }}
        <div>
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>
        <div>
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug) }}
            {{ form_errors(form.slug) }}
        </div>
        <div class="btn-group">
            {{ form_widget(form.save) }}
            <a href="{{ path('admin.category.index') }}" class="btn-cancel">Cancel</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
