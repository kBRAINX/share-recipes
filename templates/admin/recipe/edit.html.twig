{# templates/recipe/edit.html.twig #}
{% extends 'admin/admin.html.twig' %}

{% block title %}Edit Recipe{% endblock %}

{% block body %}
    <style>
        .edit-form-wrapper {
            margin: 2em auto;
            max-width: 600px;
            width: 95%;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            font-family: Arial, sans-serif;
        }
        .edit-form-wrapper h2 {
            text-align: center;
            color: #ff6f61;
            margin-bottom: 1em;
        }
        .image-preview {
            text-align: center;
            margin-bottom: 1em;
        }
        .image-preview img {
            max-width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid #ccc;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        form div {
            margin-bottom: 15px;
        }
        form label {
            font-weight: bold;
            margin-bottom: 5px;
        }
        form input, form textarea {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            width: 100%;
            height: 50px;
        }
        form textarea {
            height: 150px;
        }
        form input[readonly] {
            background-color: #e9ecef;
        }
        .btn-group {
            display: flex;
            justify-content: space-between;
        }
        .btn-save {
            background-color: #ff6f61;
            color: #fff;
            border: none;
            padding: 15px 50px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            flex: 1;
            margin-right: 10px;
        }
        .btn-save:hover {
            background-color: #ff5733;
        }
        .btn-cancel {
            background-color: #ccc;
            color: #333;
            border: none;
            padding: 15px 50px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            flex: 1;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }
        .btn-cancel:hover {
            background-color: #999;
        }
        .error-message {
            color: red;
            font-size: 0.9em;
            margin-top: 5px;
        }
    </style>

    <div class="edit-form-wrapper">
        <h2>Edit Recipe</h2>
        <div class="image-preview">
            <img src="{{ recipe.thumbnail ? '/images/recipes/' ~ recipe.thumbnail : '/images/default.png' }}" alt="{{ recipe.getTitle }}">
        </div>
        {{ form_start(form) }}
        <div>
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>
        <div>
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug) }}
            {{ form_errors(form.slug) }}
        </div>
        <div>
            {{ form_label(form.category) }}
            {{ form_widget(form.category) }}
            {{ form_errors(form.category) }}
        </div>
        <div>
            {{ form_label(form.thumbnailFile) }}
            {{ form_widget(form.thumbnailFile) }}
            {{ form_errors(form.thumbnailFile) }}
        </div>
        <div>
            {{ form_label(form.content) }}
            {{ form_widget(form.content) }}
            {{ form_errors(form.content) }}
        </div>
        <div>
            {{ form_label(form.duration) }}
            {{ form_widget(form.duration) }}
            {{ form_errors(form.duration) }}
        </div>
        <div class="btn-group">
            {{ form_widget(form.save, { 'attr': { 'class': 'btn-save' } }) }}
            <a href="{{ path('admin.recipe.index') }}" class="btn-cancel">Cancel</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
